@model Inventory.Mvc.Models.ProductViewModel

@{
    Layout = "~/Views/Shared/SystemUserLayout.cshtml";
}

<div class="container-fluid">
    <div class="mx-auto">
        <h3 style="color:#808080">Delete Product</h3>

        @using (Html.BeginForm("Delete", "Products", FormMethod.Post))
        {
            @Html.HiddenFor(temp => temp.ProductID)
            @Html.HiddenFor(temp => temp.ProductType)

            <div class="row">

                <div class="col-md-6 mx-auto border-secondary">

                    <div class="form-group form-row">
                        @Html.LabelFor(temp => temp.ProductName, "Product Name",
                         new {@class="col-form-label col-lg-4"})

                        <div class="col-lg-8">
                            @Html.TextBoxFor(temp => temp.ProductName,
                            new{@class="form-control col-lg-8", @readonly = "readonly", placeholder = "Product Name" })

                            @Html.ValidationMessageFor(temp => temp.ProductName)
                        </div>
                    </div>

                    <div class="form-group form-row">
                        @Html.LabelFor(temp => temp.ProductCode, "Product Code",
                         new {@class="col-form-label col-lg-4" })

                        <div class="col-lg-8">
                            @Html.TextBoxFor(temp => temp.ProductCode,
                            new{@class="form-control col-lg-8", @readonly = "readonly", placeholder = "Product Code" })

                            @Html.ValidationMessageFor(temp => temp.ProductCode)
                        </div>
                    </div>

                    <div class="form-group form-row">
                        @Html.LabelFor(temp => temp.ProductUnitPrice, "Unit Price",
                         new {@class="col-form-label col-lg-4" })

                        <div class="col-lg-8">
                            @Html.TextBoxFor(temp => temp.ProductUnitPrice,
                            new{@class="form-control col-lg-8", @readonly = "readonly", placeholder = "Product Price" })
                            @Html.ValidationMessageFor(temp => temp.ProductUnitPrice)
                        </div>
                    </div>

                    <div class="border-top text-right pt-2">
                        <button class="btn btn-danger"
                                onclick="return confirm('Are you sure to delete')">
                            Delete
                        </button>
                    </div>

                </div>
            </div>
        }

    </div>
</div>
