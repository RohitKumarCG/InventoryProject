

@model Inventory.Mvc.Models.RawMaterialViewModel

@{
    Layout = "~/Views/Shared/SystemUserLayout.cshtml";
}

<div class="container-fluid">
    <div class="mx-auto">
        <h3 style="color:#808080">Delete Raw Material</h3>

        @using (Html.BeginForm("Delete", "RawMaterials", FormMethod.Post))
        {
            @Html.HiddenFor(temp => temp.RawMaterialID)

            <div class="row">

                <div class="col-md-6 mx-auto border-secondary">

                    <div class="form-group form-row">
                        @Html.LabelFor(temp => temp.RawMaterialName, "Raw Material Name",
                            new {@class="col-form-label col-lg-4"})

                        <div class="col-lg-8">
                            @Html.TextBoxFor(temp => temp.RawMaterialName,
                            new{@class="form-control col-lg-8", @readonly="readonly", placeholder = "Raw Material Name"})

                            @Html.ValidationMessageFor(temp => temp.RawMaterialName)
                        </div>
                    </div>

                    <div class="form-group form-row">
                        @Html.LabelFor(temp => temp.RawMaterialCode, "Raw Material Code",
                            new {@class="col-form-label col-lg-4" })

                        <div class="col-lg-8">
                            @Html.TextBoxFor(temp => temp.RawMaterialCode,
                            new{@class="form-control col-lg-8", @readonly = "readonly", placeholder = "Raw Material Code" })

                            @Html.ValidationMessageFor(temp => temp.RawMaterialCode)
                        </div>
                    </div>

                    <div class="form-group form-row">
                        @Html.LabelFor(temp => temp.RawMaterialUnitPrice, "Unit Price",
                            new {@class="col-form-label col-lg-4" })

                        <div class="col-lg-8">
                            @Html.TextBoxFor(temp => temp.RawMaterialUnitPrice,
                            new{@class="form-control col-lg-8", @readonly = "readonly", placeholder = "Raw Material Price" })

                            @Html.ValidationMessageFor(temp => temp.RawMaterialUnitPrice)
                        </div>
                    </div>

                    <div class="border-top text-right pt-2">
                        <button class="btn btn-danger"
                                onclick="return confirm('Are you sure to delete')">
                            Delete
                        </button>
                    </div>

                </div>
            </div>
        }

    </div>
</div>
