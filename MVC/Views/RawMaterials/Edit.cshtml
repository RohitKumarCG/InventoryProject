@model Inventory.Mvc.Models.RawMaterialViewModel

@{
    Layout = "~/Views/Shared/SystemUserLayout.cshtml";
}

<div class="container-fluid">
    <div class="mx-auto">
        <h3 style="color:#808080">Edit Raw Material</h3>

        @using (Html.BeginForm("Edit", "RawMaterials", FormMethod.Post))
        {
            @Html.HiddenFor(temp => temp.RawMaterialID)

            <div class="row">

                <div class="col-md-6 mx-auto border-secondary">

                    <div class="form-group form-row">
                        @Html.LabelFor(temp => temp.RawMaterialName, "Raw Material Name",
                            new {@class="col-form-label col-lg-4"})

                        <div class="col-lg-8">
                            @Html.TextBoxFor(temp => temp.RawMaterialName,
                            new{@class= "form-control col-lg-8 rawMaterialName", placeholder = "Raw Material Name", maxlength = "30" })

                            @Html.ValidationMessageFor(temp => temp.RawMaterialName)
                        </div>
                    </div>

                    <div class="form-group form-row">
                        @Html.LabelFor(temp => temp.RawMaterialCode, "Raw Material Code",
                            new {@class="col-form-label col-lg-4" })

                        <div class="col-lg-8">
                            @Html.TextBoxFor(temp => temp.RawMaterialCode,
                            new{@class= "form-control col-lg-8 rawMaterialCode", placeholder = "Raw Material Code", maxlength = "5" })

                            @Html.ValidationMessageFor(temp => temp.RawMaterialCode)
                        </div>
                    </div>

                    <div class="form-group form-row">
                        @Html.LabelFor(temp => temp.RawMaterialUnitPrice, "Unit Price",
                            new {@class="col-form-label col-lg-4" })

                        <div class="col-lg-8">
                            @Html.TextBoxFor(temp => temp.RawMaterialUnitPrice,
                            new{@class="form-control col-lg-8 rawMaterialPrice", placeholder = "Raw Material Price" })

                            @Html.ValidationMessageFor(temp => temp.RawMaterialUnitPrice)
                        </div>
                    </div>

                    <div class="border-top text-right pt-2">
                        <button class="btn btn-success" id="editButton"
                                onclick="return confirm('Are you sure')">
                            Edit
                        </button>
                    </div>

                </div>
            </div>
        }

    </div>
</div>

<script>
    $(document).ready(function () {
        $(function () {
            $('#editButton').attr('disabled', 'disabled');
        });

        $('input[type=text],input[type=text],input[type=text]').keyup(function () {
            if ($('.rawMaterialName').val().length > 2 && $('.rawMaterialCode').val().length > 2 && $('.rawMaterialPrice').val() != '') {
                $('#editButton').removeAttr('disabled');
            }
            else {
                $('#editButton').attr('disabled', 'disabled');
            }
        });
    });
</script>